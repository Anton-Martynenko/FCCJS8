// Change code below this line
function remove(arr, bookName) {
  if (arr.indexOf(bookName) >= 0) {
    
    let index = arr.indexOf(bookName);
    
    let newArr = arr.slice();
    
    console.log(newArr);
    
    newArr.splice(index, 1);
    
    return newArr;
    // Change code above this line
    }
}
